name: Rust CI

on:
  workflow_dispatch: {}

# Cancel in-flight runs on new pushes (saves minutes)
concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true

env:
  CARGO_TERM_COLOR: always

jobs:
  test:
    name: Rust Tests
    runs-on: ubuntu-latest
    timeout-minutes: 30

    steps:
    - uses: actions/checkout@v4
    
    - name: Install Rust
      uses: dtolnay/rust-toolchain@stable
      with:
        components: rustfmt, clippy
    
    - name: Cache cargo dependencies
      uses: Swatinem/rust-cache@v2
      with:
        key: ${{ runner.os }}-format-clippy-${{ hashFiles('Cargo.lock') }}
        cache-on-failure: true
        restore-keys: |
          ${{ runner.os }}-cargo-
    
    - name: Check formatting
      run: cargo run -p xtask --locked -- fmt --check

    - name: Run clippy
      run: cargo run -p xtask --locked -- check --clippy

    - name: Run tests
      run: cargo run -p xtask --locked -- test

    - name: Run corpus tests
      run: cargo run -p xtask --locked -- corpus

    - name: Run highlight tests
      run: cargo run -p xtask --locked -- highlight
    
    - name: Check build
      run: cargo build --locked --release
    
    - name: Upload coverage
      uses: codecov/codecov-action@v5
      with:
        file: ./target/coverage/lcov.info
        flags: unittests
        name: codecov-umbrella
        fail_ci_if_error: false

  lint:
    name: Lint & Format
    runs-on: ubuntu-latest
    timeout-minutes: 15

    steps:
    - uses: actions/checkout@v4
    
    - name: Install Rust
      uses: dtolnay/rust-toolchain@stable
      with:
        components: rustfmt, clippy
    
    - name: Check formatting
      run: cargo run -p xtask --locked -- fmt --check

    - name: Run clippy
      run: cargo run -p xtask --locked -- check --clippy

  security:
    name: Security Audit
    runs-on: ubuntu-latest
    timeout-minutes: 15

    steps:
    - uses: actions/checkout@v4
    
    - name: Install Rust
      uses: dtolnay/rust-toolchain@stable
    
    - name: Run security audit
      run: cargo audit

  build-matrix:
    name: Build Matrix
    runs-on: ${{ matrix.os }}
    timeout-minutes: 30
    strategy:
      matrix:
        os: [ubuntu-latest, windows-latest, macos-latest]
        rust: [stable, 1.70, 1.75]
        exclude:
          - os: windows-latest
            rust: 1.70
          - os: macos-latest
            rust: 1.70
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Install Rust ${{ matrix.rust }}
      uses: dtolnay/rust-toolchain@stable
      with:
        toolchain: ${{ matrix.rust }}
    
    - name: Build
      run: cargo build --locked --release
    
    - name: Test
      run: cargo run -p xtask --locked -- test

  performance:
    name: Performance Check
    runs-on: ubuntu-latest
    timeout-minutes: 30
    if: github.event_name == 'push' && github.ref == 'refs/heads/main'

    steps:
    - uses: actions/checkout@v4
    
    - name: Install Rust
      uses: dtolnay/rust-toolchain@stable
    
    - name: Build with timing
      run: cargo build --locked --release --timings
    
    - name: Run benchmarks
      run: cargo run -p xtask --locked -- bench

  documentation:
    name: Documentation
    runs-on: ubuntu-latest
    timeout-minutes: 15

    steps:
    - uses: actions/checkout@v4
    
    - name: Install Rust
      uses: dtolnay/rust-toolchain@stable
    
    - name: Build documentation
      run: cargo doc --locked --no-deps --document-private-items

    - name: Check documentation links
      run: cargo doc --locked --no-deps --document-private-items

  publish:
    name: Publish to crates.io
    runs-on: ubuntu-latest
    timeout-minutes: 20
    if: github.event_name == 'push' && github.ref == 'refs/heads/main' && startsWith(github.ref, 'refs/tags/')
    needs: [test, lint, security, documentation]

    steps:
    - uses: actions/checkout@v4
    
    - name: Install Rust
      uses: dtolnay/rust-toolchain@stable
    
    - name: Publish to crates.io
      run: cargo publish --locked
      env:
        CARGO_REGISTRY_TOKEN: ${{ secrets.CARGO_REGISTRY_TOKEN }} 
