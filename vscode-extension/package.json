{
  "name": "perl-lsp",
  "displayName": "Perl Language Server",
  "description": "Comprehensive Perl language support powered by tree-sitter-perl LSP",
  "version": "0.8.3",
  "publisher": "effortlesssteven",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Debuggers"
  ],
  "keywords": [
    "perl",
    "perl5",
    "language-server",
    "lsp",
    "tree-sitter",
    "intellisense"
  ],
  "extensionKind": [
    "workspace"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/EffortlessSteven/tree-sitter-perl"
  },
  "bugs": {
    "url": "https://github.com/EffortlessSteven/tree-sitter-perl/issues"
  },
  "homepage": "https://github.com/EffortlessSteven/tree-sitter-perl#readme",
  "galleryBanner": {
    "color": "#1e3a8a",
    "theme": "dark"
  },
  "license": "MIT",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:perl",
    "onCommand:perl-lsp.restart",
    "onCommand:perl-lsp.showVersion"
  ],
  "contributes": {
    "languages": [
      {
        "id": "perl",
        "aliases": [
          "Perl",
          "perl",
          "Perl 5"
        ],
        "extensions": [
          ".pl",
          ".pm",
          ".pod",
          ".t",
          ".psgi"
        ],
        "firstLine": "^#!.*\\bperl\\b",
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Perl LSP",
      "properties": {
        "perl-lsp.channel": {
          "type": "string",
          "enum": ["latest", "stable", "tag"],
          "default": "latest",
          "markdownDescription": "Release channel: `latest` for newest release, `stable` for latest stable, `tag` for specific version"
        },
        "perl-lsp.versionTag": {
          "type": "string",
          "default": "",
          "markdownDescription": "Specific release tag (e.g., `v0.8.3`) when channel is set to `tag`"
        },
        "perl-lsp.serverPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Absolute path to `perl-lsp` binary. Leave empty to auto-download latest release."
        },
        "perl-lsp.autoDownload": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically download `perl-lsp` binary if not found locally. Set to false for internal deployments using `serverPath`."
        },
        "perl-lsp.downloadBaseUrl": {
          "type": "string",
          "default": "",
          "markdownDescription": "Base URL for internal binary hosting. When set, downloads from this location instead of GitHub releases. Should point to a directory containing release files."
        },
        "perl-lsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Trace server communication for debugging"
        },
        "perl-lsp.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time syntax diagnostics"
        },
        "perl-lsp.enableSemanticTokens": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic syntax highlighting"
        },
        "perl-lsp.enableFormatting": {
          "type": "boolean",
          "default": true,
          "description": "Enable document formatting"
        },
        "perl-lsp.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Format document on save"
        },
        "perl-lsp.enableRefactoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable advanced refactoring features"
        },
        "perl-lsp.perltidyConfig": {
          "type": "string",
          "default": "",
          "description": "Path to .perltidyrc configuration file"
        },
        "perl-lsp.includePaths": {
          "type": "array",
          "default": [
            "lib",
            "local/lib/perl5"
          ],
          "description": "Additional paths to search for Perl modules"
        },
        "perl-lsp.enableTestIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Test::More and Test2 integration"
        }
      }
    },
    "commands": [
      {
        "command": "perl-lsp.restart",
        "title": "Restart Perl Language Server",
        "category": "Perl",
        "icon": "$(refresh)"
      },
      {
        "command": "perl-lsp.showVersion",
        "title": "Show Server Version",
        "category": "Perl",
        "icon": "$(info)"
      },
      {
        "command": "perl-lsp.organizeImports",
        "title": "Organize Use Statements",
        "category": "Perl",
        "icon": "$(organization)"
      },
      {
        "command": "perl-lsp.runTests",
        "title": "Run Tests in Current File",
        "category": "Perl",
        "icon": "$(beaker)"
      },
      {
        "command": "perl-lsp.extractSubroutine",
        "title": "Extract Subroutine",
        "category": "Perl Refactor",
        "icon": "$(symbol-method)"
      },
      {
        "command": "perl-lsp.extractVariable",
        "title": "Extract Variable",
        "category": "Perl Refactor",
        "icon": "$(symbol-variable)"
      },
      {
        "command": "perl-lsp.inlineVariable",
        "title": "Inline Variable",
        "category": "Perl Refactor",
        "icon": "$(replace)"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "perl-lsp.runTests",
          "when": "editorLangId == perl",
          "group": "navigation"
        },
        {
          "command": "perl-lsp.extractSubroutine",
          "when": "editorLangId == perl",
          "group": "1_modification"
        },
        {
          "command": "perl-lsp.extractVariable",
          "when": "editorLangId == perl",
          "group": "1_modification"
        },
        {
          "command": "perl-lsp.inlineVariable",
          "when": "editorLangId == perl",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "perl-lsp.organizeImports",
        "key": "shift+alt+o",
        "when": "editorTextFocus && editorLangId == perl"
      }
    ],
    "snippets": [
      {
        "language": "perl",
        "path": "./snippets/perl.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "perl",
        "required": [
          "script"
        ],
        "properties": {
          "script": {
            "type": "string",
            "description": "The Perl script to execute"
          },
          "args": {
            "type": "array",
            "description": "Arguments to pass to the script"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "adm-zip": "^0.5.10",
    "tar": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.88.0",
    "@types/adm-zip": "^0.5.5",
    "@types/tar": "^6.1.11",
    "@vscode/vsce": "^2.24.0",
    "typescript": "^5.4.0"
  }
}
