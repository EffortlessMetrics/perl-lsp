{
  "name": "perl-lsp",
  "displayName": "Perl Language Server",
  "description": "Comprehensive Perl language support powered by tree-sitter-perl LSP",
  "version": "0.8.0",
  "publisher": "tree-sitter-perl",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Debuggers"
  ],
  "keywords": [
    "perl",
    "perl5",
    "language-server",
    "lsp",
    "tree-sitter",
    "syntax-highlighting",
    "autocomplete",
    "refactoring",
    "cpan",
    "scripting"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/EffortlessSteven/tree-sitter-perl"
  },
  "bugs": {
    "url": "https://github.com/EffortlessSteven/tree-sitter-perl/issues"
  },
  "homepage": "https://github.com/EffortlessSteven/tree-sitter-perl#readme",
  "galleryBanner": {
    "color": "#1e3a8a",
    "theme": "dark"
  },
  "license": "MIT",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:perl"
  ],
  "contributes": {
    "languages": [
      {
        "id": "perl",
        "aliases": ["Perl", "perl", "Perl 5"],
        "extensions": [".pl", ".pm", ".pod", ".t", ".psgi"],
        "firstLine": "^#!.*\\bperl\\b",
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "Perl LSP",
      "properties": {
        "perl-lsp.autoDownload": {
          "type": "boolean",
          "default": true,
          "description": "Automatically download the language server if not found"
        },
        "perl-lsp.serverPath": {
          "type": "string",
          "default": "perl-lsp",
          "description": "Path to the perl-lsp executable"
        },
        "perl-lsp.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time syntax diagnostics"
        },
        "perl-lsp.enableSemanticTokens": {
          "type": "boolean",
          "default": true,
          "description": "Enable semantic syntax highlighting"
        },
        "perl-lsp.enableFormatting": {
          "type": "boolean",
          "default": true,
          "description": "Enable document formatting"
        },
        "perl-lsp.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Format document on save"
        },
        "perl-lsp.enableRefactoring": {
          "type": "boolean",
          "default": true,
          "description": "Enable advanced refactoring features"
        },
        "perl-lsp.perltidyConfig": {
          "type": "string",
          "default": "",
          "description": "Path to .perltidyrc configuration file"
        },
        "perl-lsp.includePaths": {
          "type": "array",
          "default": ["lib", "local/lib/perl5"],
          "description": "Additional paths to search for Perl modules"
        },
        "perl-lsp.enableTestIntegration": {
          "type": "boolean",
          "default": true,
          "description": "Enable Test::More and Test2 integration"
        },
        "perl-lsp.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Trace server communication for debugging"
        }
      }
    },
    "commands": [
      {
        "command": "perl-lsp.restart",
        "title": "Restart Perl Language Server",
        "category": "Perl"
      },
      {
        "command": "perl-lsp.organizeImports",
        "title": "Organize Use Statements",
        "category": "Perl"
      },
      {
        "command": "perl-lsp.runTests",
        "title": "Run Tests in Current File",
        "category": "Perl"
      },
      {
        "command": "perl-lsp.extractSubroutine",
        "title": "Extract Subroutine",
        "category": "Perl Refactor"
      },
      {
        "command": "perl-lsp.extractVariable",
        "title": "Extract Variable",
        "category": "Perl Refactor"
      },
      {
        "command": "perl-lsp.inlineVariable",
        "title": "Inline Variable",
        "category": "Perl Refactor"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "perl-lsp.extractSubroutine",
          "when": "resourceExtname == .pl || resourceExtname == .pm",
          "group": "1_modification"
        },
        {
          "command": "perl-lsp.extractVariable",
          "when": "resourceExtname == .pl || resourceExtname == .pm",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "perl-lsp.organizeImports",
        "key": "shift+alt+o",
        "when": "editorTextFocus && resourceExtname == .pl"
      }
    ],
    "snippets": [
      {
        "language": "perl",
        "path": "./snippets/perl.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "perl",
        "required": ["script"],
        "properties": {
          "script": {
            "type": "string",
            "description": "The Perl script to execute"
          },
          "args": {
            "type": "array",
            "description": "Arguments to pass to the script"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  }
}