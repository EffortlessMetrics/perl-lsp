{
  "name": "perl-lsp",
  "displayName": "Perl Language Server",
  "description": "Comprehensive Perl language support powered by tree-sitter-perl LSP",
  "version": "0.9.0",
  "publisher": "effortlesssteven",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters",
    "Debuggers"
  ],
  "keywords": [
    "perl",
    "perl5",
    "language-server",
    "lsp",
    "tree-sitter",
    "intellisense"
  ],
  "extensionKind": [
    "workspace"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/EffortlessMetrics/tree-sitter-perl"
  },
  "bugs": {
    "url": "https://github.com/EffortlessMetrics/tree-sitter-perl/issues"
  },
  "homepage": "https://github.com/EffortlessMetrics/tree-sitter-perl#readme",
  "galleryBanner": {
    "color": "#1e3a8a",
    "theme": "dark"
  },
  "license": "MIT",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:perl",
    "onCommand:perl-lsp.restart",
    "onCommand:perl-lsp.showVersion"
  ],
  "contributes": {
    "languages": [
      {
        "id": "perl",
        "aliases": [
          "Perl",
          "perl",
          "Perl 5"
        ],
        "extensions": [
          ".pl",
          ".pm",
          ".pod",
          ".t",
          ".psgi"
        ],
        "firstLine": "^#!.*\\bperl\\b",
        "configuration": "./language-configuration.json"
      }
    ],
    "breakpoints": [
      {
        "language": "perl"
      }
    ],
    "debuggers": [
      {
        "type": "perl",
        "label": "Perl",
        "program": "./out/extension.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Perl script to debug",
                "default": "${workspaceFolder}/script.pl"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments passed to the script",
                "default": [],
                "items": {
                  "type": "string"
                }
              },
              "perlPath": {
                "type": "string",
                "description": "Path to the Perl executable",
                "default": "perl"
              },
              "includePaths": {
                "type": "array",
                "description": "Additional include paths (passed as -I)",
                "default": [],
                "items": {
                  "type": "string"
                }
              },
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop at the first line",
                "default": true
              },
              "cwd": {
                "type": "string",
                "description": "Current working directory for the script",
                "default": "${workspaceFolder}"
              },
              "env": {
                "type": "object",
                "description": "Environment variables",
                "default": {}
              }
            }
          },
          "attach": {
            "properties": {
              "processId": {
                "type": "number",
                "description": "Attach to an existing Perl process by PID"
              },
              "host": {
                "type": "string",
                "description": "Host for TCP attach mode",
                "default": "localhost"
              },
              "port": {
                "type": "number",
                "description": "Port for TCP attach mode",
                "default": 13603
              },
              "timeout": {
                "type": "number",
                "description": "TCP attach timeout in milliseconds",
                "default": 5000
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "perl",
            "request": "launch",
            "name": "Perl: Launch Script",
            "program": "${workspaceFolder}/script.pl",
            "stopOnEntry": true
          },
          {
            "type": "perl",
            "request": "attach",
            "name": "Perl: Attach to Debugger",
            "host": "localhost",
            "port": 13603,
            "timeout": 5000
          }
        ]
      }
    ],
    "configuration": {
      "title": "Perl LSP",
      "properties": {
        "perl-lsp.channel": {
          "type": "string",
          "enum": ["latest", "stable", "tag"],
          "default": "latest",
          "markdownDescription": "Release channel: `latest` for newest release, `stable` for latest stable, `tag` for specific version"
        },
        "perl-lsp.versionTag": {
          "type": "string",
          "default": "",
          "markdownDescription": "Specific release tag (e.g., `v0.8.3`) when channel is set to `tag`"
        },
        "perl-lsp.serverPath": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "markdownDescription": "Absolute path to `perl-lsp` binary. Leave empty to auto-download latest release."
        },
        "perl-lsp.autoDownload": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Automatically download `perl-lsp` binary if not found locally. Set to false for internal deployments using `serverPath`."
        },
        "perl-lsp.downloadBaseUrl": {
          "type": "string",
          "default": "",
          "scope": "machine",
          "markdownDescription": "Internal base URL hosting perl-lsp archives and SHA256SUMS (bypasses GitHub releases). Example: `https://internal.example.com/perl-lsp/`"
        },
        "perl-lsp.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "markdownDescription": "Controls the logging verbosity of the language server communication. Allowed values: `off`, `messages`, `verbose`. Useful for debugging LSP issues."
        },
        "perl-lsp.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable real-time **syntax diagnostics**."
        },
        "perl-lsp.enableSemanticTokens": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable **semantic syntax highlighting**."
        },
        "perl-lsp.enableFormatting": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable document formatting using `perltidy`. Requires `perltidy` to be installed on your system."
        },
        "perl-lsp.formatOnSave": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Format document on save. **Note:** This requires a formatter (like `perltidy`) to be configured."
        },
        "perl-lsp.enableRefactoring": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable **advanced refactoring features** (e.g. `Extract Variable`, `Extract Subroutine`)."
        },
        "perl-lsp.perltidyConfig": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to your `.perltidyrc` configuration file. If omitted, searches workspace and home directory."
        },
        "perl-lsp.includePaths": {
          "type": "array",
          "default": [
            "lib",
            "local/lib/perl5"
          ],
          "markdownDescription": "Additional library paths (like `use lib`) to search for Perl modules. Relative paths resolve from workspace root."
        },
        "perl-lsp.enableTestIntegration": {
          "type": "boolean",
          "default": true,
          "markdownDescription": "Enable `Test::More` and `Test2` integration"
        }
      }
    },
    "commands": [
      {
        "command": "perl-lsp.restart",
        "title": "Restart Perl Language Server",
        "category": "Perl",
        "icon": "$(refresh)"
      },
      {
        "command": "perl-lsp.showVersion",
        "title": "Show Server Version",
        "category": "Perl",
        "icon": "$(info)"
      },
      {
        "command": "perl-lsp.showOutput",
        "title": "Show Output Channel",
        "category": "Perl",
        "icon": "$(output)"
      },
      {
        "command": "perl-lsp.showStatusMenu",
        "title": "Show Status Menu",
        "category": "Perl",
        "icon": "$(menu)"
      },
      {
        "command": "perl-lsp.organizeImports",
        "title": "Organize Use Statements",
        "category": "Perl",
        "icon": "$(organization)"
      },
      {
        "command": "perl-lsp.runTests",
        "title": "Run Tests in Current File",
        "category": "Perl",
        "icon": "$(beaker)"
      },
      {
        "command": "perl-lsp.extractSubroutine",
        "title": "Extract Subroutine",
        "category": "Perl Refactor",
        "icon": "$(symbol-method)"
      },
      {
        "command": "perl-lsp.extractVariable",
        "title": "Extract Variable",
        "category": "Perl Refactor",
        "icon": "$(symbol-variable)"
      },
      {
        "command": "perl-lsp.inlineVariable",
        "title": "Inline Variable",
        "category": "Perl Refactor",
        "icon": "$(replace)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "perl-lsp.restart",
          "when": "editorLangId == perl"
        },
        {
          "command": "perl-lsp.showOutput",
          "when": "editorLangId == perl"
        },
        {
          "command": "perl-lsp.showStatusMenu",
          "when": "editorLangId == perl"
        },
        {
          "command": "perl-lsp.organizeImports",
          "when": "editorLangId == perl"
        },
        {
          "command": "perl-lsp.runTests",
          "when": "editorLangId == perl && resourceExtname =~ /\\.(t|pl)$/"
        },
        {
          "command": "perl-lsp.extractSubroutine",
          "when": "editorLangId == perl"
        },
        {
          "command": "perl-lsp.extractVariable",
          "when": "editorLangId == perl"
        },
        {
          "command": "perl-lsp.inlineVariable",
          "when": "editorLangId == perl"
        }
      ],
      "editor/title": [
        {
          "command": "perl-lsp.runTests",
          "when": "editorLangId == perl && resourceExtname =~ /\\.(t|pl)$/",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "perl-lsp.runTests",
          "when": "editorLangId == perl",
          "group": "navigation"
        },
        {
          "command": "perl-lsp.extractSubroutine",
          "when": "editorLangId == perl",
          "group": "1_modification"
        },
        {
          "command": "perl-lsp.extractVariable",
          "when": "editorLangId == perl",
          "group": "1_modification"
        },
        {
          "command": "perl-lsp.inlineVariable",
          "when": "editorLangId == perl",
          "group": "1_modification"
        }
      ]
    },
    "keybindings": [
      {
        "command": "perl-lsp.organizeImports",
        "key": "shift+alt+o",
        "when": "editorTextFocus && editorLangId == perl"
      },
      {
        "command": "perl-lsp.runTests",
        "key": "shift+alt+t",
        "when": "editorTextFocus && editorLangId == perl"
      },
      {
        "command": "perl-lsp.restart",
        "key": "shift+alt+r",
        "when": "editorTextFocus && editorLangId == perl"
      }
    ],
    "snippets": [
      {
        "language": "perl",
        "path": "./snippets/perl.json"
      },
      {
        "language": "json",
        "path": "./snippets/launch.json"
      },
      {
        "language": "jsonc",
        "path": "./snippets/launch.json"
      }
    ],
    "taskDefinitions": [
      {
        "type": "perl",
        "required": [
          "script"
        ],
        "properties": {
          "script": {
            "type": "string",
            "description": "The Perl script to execute"
          },
          "args": {
            "type": "array",
            "description": "Arguments to pass to the script"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "adm-zip": "^0.5.10",
    "tar": "^7.5.7"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/vscode": "^1.88.0",
    "@types/adm-zip": "^0.5.5",
    "@types/tar": "^6.1.11",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.4.0"
  }
}
